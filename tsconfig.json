{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@firebase/auth": [
        "./src/__mocks__/@firebase/auth.ts"
      ],
      "@firebase/auth/*": ["./src/__mocks__/@firebase/auth.ts"],
      "@firebase/app": ["./src/__mocks__/@firebase/app.ts"],
      "@firebase/app/*": [
        "./src/__mocks__/@firebase/app.ts"
      ],
      "*": [
        "*",
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
